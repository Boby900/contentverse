{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true, //commenting this will throw the error related to the Drizzle.
    "rootDir": "./src",
    "outDir": "./dist",    
  },
  "exclude": ["drizzle.config.ts"]
}
